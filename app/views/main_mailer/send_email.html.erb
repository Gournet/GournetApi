<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <img src="https://upload.wikimedia.org/wikipedia/commons/4/4c/Logo_Gourmet.png" alt="">
        <span class="card-title activator grey-text text-darken-4"><%= @title %></span>
      </div>
      <div class="card-content">
        <p><%= @body %></p>
      </div>
      <div class="card-action">
        <a href="www.facebook.com" target="_blank">Facebook</a>
        <a href="www.twitter.com" target="_blank">Twitter</a>
      </div>
    </div>
  </div>
</div>
